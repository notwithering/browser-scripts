{
	"manifest_version": 2,
	"name": "invert",
	"author": "WitheringAway",
	"version": "1.0",
	"description": "toggle color invert on saved domains",
	"permissions": ["activeTab", "storage", "<all_urls>"],
	"background": {
		"scripts": ["background.js"]
	},
	"icons": {
		"16": "icons/icon-16.png",
		"48": "icons/icon-48.png",
		"96": "icons/icon-96.png",
		"128": "icons/icon-128.png"
	},
	"browser_action": {
		"default_icon": {
			"16": "icons/icon-16.png",
			"48": "icons/icon-48.png",
			"96": "icons/icon-96.png",
			"128": "icons/icon-128.png"
		},
		"default_title": "invert"
	}
}
